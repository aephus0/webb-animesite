{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "pretty": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
